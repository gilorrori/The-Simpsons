<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.gilorroristore.thesimpsons.ui.characters.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/action_charactersFragment_to_detailCharacterFragment"
            app:destination="@id/detailCharacterFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/detailCharacterFragment"
        android:name="com.gilorroristore.thesimpsons.ui.characterdetail.CharacterDetailFragment"
        android:label="fragment_detail_character"
        tools:layout="@layout/fragment_detail_character">
        <argument
            android:name="idCharacter"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/episodesFragment"
        android:name="com.gilorroristore.thesimpsons.ui.episodies.EpisodesFragment"
        android:label="fragment_episodes"
        tools:layout="@layout/fragment_episodes" />
    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.gilorroristore.thesimpsons.ui.location.LocationsFragment"
        android:label="fragment_locations"
        tools:layout="@layout/fragment_locations" />
</navigation>